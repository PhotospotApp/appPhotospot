<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:scaleType="centerCrop"
        android:id="@+id/profilePicture"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/profilePicture"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="-50dp"
        android:text="@string/places"
        android:textAlignment="center"
        android:id="@+id/placesTextView"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/placesTextView"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="@id/flag"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="starImage"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/star"
            android:id="@+id/flag"
            android:contentDescription="flagImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>